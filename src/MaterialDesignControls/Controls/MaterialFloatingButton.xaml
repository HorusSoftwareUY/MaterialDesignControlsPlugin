<?xml version="1.0" encoding="UTF-8"?>
<custom:CustomFrame xmlns="http://xamarin.com/schemas/2014/forms" 
       	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       	xmlns:custom="clr-namespace:Plugin.MaterialDesignControls.Implementations;assembly=Plugin.MaterialDesignControls"
       	xmlns:controls="clr-namespace:Plugin.MaterialDesignControls;assembly=Plugin.MaterialDesignControls"
       	x:Class="Plugin.MaterialDesignControls.MaterialFloatingButton"
		IsClippedToBounds="True" >
    <StackLayout 
		VerticalOptions="Center"
		Spacing="0" 
		HorizontalOptions="CenterAndExpand"
		Orientation="Horizontal">
        <custom:CustomImage 
	        x:Name="imgLeft" 
			IsVisible="False" 
	        VerticalOptions="Center"/>
        <controls:MaterialLabel 
	        x:Name="lblText" 
	        IsVisible="False" 
			HorizontalOptions="Center"
	        VerticalTextAlignment="Center"/>
        <custom:CustomImage
			x:Name="imgRight" 
			IsVisible="False"
			HorizontalOptions="Center"/>
    </StackLayout>
</custom:CustomFrame>