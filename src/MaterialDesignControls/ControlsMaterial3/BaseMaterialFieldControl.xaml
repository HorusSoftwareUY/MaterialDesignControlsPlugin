<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plugin.MaterialDesignControls.Material3.BaseMaterialFieldControl"
             xmlns:controls="clr-namespace:Plugin.MaterialDesignControls;assembly=Plugin.MaterialDesignControls"
             xmlns:custom="clr-namespace:Plugin.MaterialDesignControls.Implementations;assembly=Plugin.MaterialDesignControls">
    <ContentView.Content>
        <StackLayout Spacing="2">
            <Frame x:Name="frmContainer"
                   HasShadow="false"
                   HeightRequest="56"
                   Padding="16,8">
                <Grid x:Name="contentLayout">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <controls:MaterialLabel x:Name="lblLabel"
                                            IsVisible="false"
                                            LineBreakMode="NoWrap"
                                            Grid.Row="0"
                                            Grid.ColumnSpan="2"
                                            Grid.Column="1"
                                            HorizontalTextAlignment="Start" />
                    
                    <custom:CustomImageButton x:Name="imgLeadingIcon"
                                              IsVisible="false"
                                              Grid.Column="0"
                                              Grid.RowSpan="2"
                                              Grid.Row="0"
                                              WidthRequest="24"
                                              HeightRequest="24"
                                              HorizontalOptions="Start" />

                    <custom:CustomImageButton x:Name="imgTrailingIcon"
                                              IsVisible="false"
                                              WidthRequest="24"
                                              Grid.Row="0"
                                              Grid.RowSpan="2"
                                              HeightRequest="24"
                                              Grid.Column="2"
                                              HorizontalOptions="End" />
                </Grid>
            </Frame>
            <BoxView x:Name="bxvLine"
                     HeightRequest="1" />
            <controls:MaterialLabel x:Name="lblAssistive"
                                    IsVisible="false"
                                    LineBreakMode="NoWrap"
                                    BackgroundColor="Transparent"
                                    Margin="16,4,16,0"
                                    HorizontalTextAlignment="Start" />
        </StackLayout>
    </ContentView.Content>
</ContentView>