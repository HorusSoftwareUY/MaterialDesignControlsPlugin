<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="clr-namespace:Plugin.MaterialDesignControls;assembly=Plugin.MaterialDesignControls"
    x:Class="ExampleMaterialDesignControls.Pages.MaterialFloatingButtonPage"
    xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    Title="Material Floating Button"
	BackgroundColor="White">
    <ContentPage.Content>
		<ScrollView>
        <StackLayout Spacing="20" Padding="20" >

			<material:MaterialLabel Text="Regular" HorizontalOptions="Center" FontFamily="{StaticResource SemiBoldFont}"/>
            <material:MaterialFloatingButton 
                Icon="add_w.png" 
		        Animation="Scale"
				HorizontalOptions="Center"
				Clicked="MaterialFloatingButton_Clicked"/>

			<material:MaterialDivider Margin="0,10" />

			<material:MaterialLabel Text="Mini" HorizontalOptions="Center" FontFamily="{StaticResource SemiBoldFont}"/>
            <material:MaterialFloatingButton 
		        Icon="download.png" 
		        ButtonSize="Mini" 
		        Animation="Scale"
				HorizontalOptions="Center"
				BackgroundColor="{StaticResource GradientColor4}" />

			<material:MaterialDivider Margin="0,10" />

			<material:MaterialLabel Text="Mini (Disabled)" HorizontalOptions="Center" FontFamily="{StaticResource SemiBoldFont}"/>
            <material:MaterialFloatingButton 
		        Icon="download.png" 
				IsEnabled="False"
		        ButtonSize="Mini" 
		        Animation="Scale"
				HorizontalOptions="Center"
				BackgroundColor="{StaticResource GradientColor4}" />

			<material:MaterialDivider Margin="0,10" />

			<material:MaterialLabel Text="Mini (.svg)" HorizontalOptions="Center" FontFamily="{StaticResource SemiBoldFont}"/>
            <material:MaterialFloatingButton  
		        ButtonSize="Mini" 
		        Animation="Scale"
				Command="{Binding TapCommand}"
				CommandParameter="Floating button tapped!"
				HorizontalOptions="Center"
				BackgroundColor="{StaticResource GradientColor8}"
				BorderColor="{StaticResource GradientColor8}"
				TextColor="{StaticResource GradientColor8}">
                <material:MaterialFloatingButton.CustomIcon>
                    <ffimageloadingsvg:SvgCachedImage Source="resource://ExampleMaterialDesignControls.Resources.Svg.ic_add.svg"/>
                </material:MaterialFloatingButton.CustomIcon>
            </material:MaterialFloatingButton>

			<material:MaterialDivider Margin="0,10" />

			<material:MaterialLabel Text="Extended (Left icon)" HorizontalOptions="Center" FontFamily="{StaticResource SemiBoldFont}"/>
            <material:MaterialFloatingButton 
                Text="Add"
		        ButtonSize="Extended" 
		        Animation="Fade"
				Command="{Binding EnableCommand}"
				HorizontalOptions="Center"
				BackgroundColor="{StaticResource GradientColor11}"
				BorderColor="{StaticResource GradientColor11}"
				TextColor="{StaticResource WhiteColor}">
				<material:MaterialFloatingButton.CustomIcon>
                    <ffimageloadingsvg:SvgCachedImage Source="resource://ExampleMaterialDesignControls.Resources.Svg.ic_add.svg"/>
                </material:MaterialFloatingButton.CustomIcon>
			</material:MaterialFloatingButton>

			<material:MaterialDivider Margin="0,10" />

			<material:MaterialLabel Text="Extended (Right icon) / Enable and disable styles" HorizontalTextAlignment="Center" HorizontalOptions="Center" FontFamily="{StaticResource SemiBoldFont}"/>
            <material:MaterialFloatingButton 
                Text="Add"
		        ButtonSize="Extended"
				Command="{Binding TapCommand}"
				CommandParameter="Floating button tapped!"
		        Icon="add_w.png" 
		        IconSide="Right" 
		        Animation="Scale"
				IsEnabled="{Binding IsEnabled}"
				HorizontalOptions="Center"
				DisabledBackgroundColor="{StaticResource GrayColor}"
				BackgroundColor="{StaticResource GradientColor11}"
				TextColor="{StaticResource WhiteColor}"
				DisabledTextColor="{StaticResource DarkGrayColor}">
				<material:MaterialFloatingButton.CustomIcon>
                    <ffimageloadingsvg:SvgCachedImage Source="resource://ExampleMaterialDesignControls.Resources.Svg.ic_add.svg"/>
                </material:MaterialFloatingButton.CustomIcon>
                <material:MaterialFloatingButton.CustomDisabledIcon>
                    <ffimageloadingsvg:SvgCachedImage Source="resource://ExampleMaterialDesignControls.Resources.Svg.ic_add_g.svg"/>
                </material:MaterialFloatingButton.CustomDisabledIcon>
			</material:MaterialFloatingButton>

			<material:MaterialDivider Margin="0,10" />

			<material:MaterialLabel Text="Extended" HorizontalOptions="Center" FontFamily="{StaticResource SemiBoldFont}"/>
			<StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <material:MaterialFloatingButton 
					iOSShadowOpacity="0.3" 
		        	iOSShadowRadius="6" 
					iOSShadowOffset="0,5" 
		        	Text="Add new item" 
					ButtonSize="Extended" 
					Animation="Fade"
					HorizontalOptions="Center"
					BackgroundColor="{StaticResource GradientColorTransparent4}"
					TextColor="{StaticResource GradientColor4}"
					/>
                <material:MaterialFloatingButton 
					Text="Add new item" 
					ToUpper="True"
					ButtonSize="Extended" 
					Animation="Fade"
					HorizontalOptions="Center"
					BackgroundColor="{StaticResource GradientColor5}" />
            </StackLayout>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
